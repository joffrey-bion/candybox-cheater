<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<Pane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jbion.candyboxcheater.view.controllers.MiscellaneousController">
   <children>
      <GridPane hgap="10.0" vgap="5.0">
         <children>
            <Label text="Language" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <Label text="Status bar type" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <ChoiceBox fx:id="gameLanguage" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <CheckBox fx:id="gameInvertedColors" mnemonicParsing="false" text="Inverted colors" GridPane.columnSpan="2" GridPane.rowIndex="4" />
            <ChoiceBox fx:id="statusBarCornerStep" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
