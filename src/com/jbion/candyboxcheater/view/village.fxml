<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<Pane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jbion.candyboxcheater.controllers.ProgressController">
   <children>
      <HBox>
         <children>
            <GridPane hgap="10.0" vgap="5.0">
               <children>
                  <Label styleClass="subsection-title" text="Shop" GridPane.valignment="TOP" />
                  <Label styleClass="subsection-title" text="Forge" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                  <Label styleClass="subsection-title" text="5th House" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP" />
                  <Label styleClass="subsection-title" text="4th House" GridPane.columnIndex="3" GridPane.valignment="TOP" />
                  <CheckBox fx:id="cellarDone" mnemonicParsing="false" text="Cellar done (unlocks main map)" GridPane.columnIndex="4" GridPane.columnSpan="3" GridPane.rowIndex="1" />
                  <ChoiceBox fx:id="forgeWeaponBought" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <CheckBox fx:id="forgeFoundLollipop" mnemonicParsing="false" text="Lollipop picked up on fireplace" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                  <VBox spacing="5.0" GridPane.columnIndex="1">
                     <children>
                        <CheckBox fx:id="secondHouseLollipop1Bought" mnemonicParsing="false" text="Lollipop 1 bought (60c)" />
                        <CheckBox fx:id="secondHouseLollipop2Bought" mnemonicParsing="false" text="Lollipop 2 bought (60c)" />
                        <CheckBox fx:id="secondHouseLollipop3Bought" mnemonicParsing="false" text="Lollipop 3 bought (60c)" />
                        <CheckBox fx:id="secondHouseChocolateBarBought" mnemonicParsing="false" text="Chocolate bar bought (800c)" />
                        <CheckBox fx:id="secondHouseTimeRingBought" mnemonicParsing="false" text="Time ring bought (500c)" />
                        <CheckBox fx:id="secondHouseMerchantHatBought" mnemonicParsing="false" text="Merchant hat bought (1.000.000c)" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" GridPane.columnIndex="4">
                     <children>
                        <CheckBox fx:id="fourthHouseFoundLollipopOnCupboard" mnemonicParsing="false" text="Lollipop picked up on cupboard" />
                        <GridPane hgap="5.0" vgap="2.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Cupboard:" />
                              <ChoiceBox fx:id="fourthHouseCupboardStep" prefWidth="150.0" GridPane.columnIndex="1" />
                              <Label text="Carpet:" GridPane.rowIndex="1" />
                              <ChoiceBox fx:id="fourthHouseCarpetStep" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
               <columnConstraints>
                  <ColumnConstraints minWidth="-Infinity" />
                  <ColumnConstraints minWidth="-Infinity" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints minWidth="-Infinity" />
                  <ColumnConstraints minWidth="-Infinity" />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <rowConstraints>
                  <RowConstraints minHeight="-Infinity" />
                  <RowConstraints minHeight="-Infinity" />
                  <RowConstraints minHeight="-Infinity" />
                  <RowConstraints minHeight="-Infinity" />
               </rowConstraints>
            </GridPane>
         </children>
      </HBox>
   </children>
</Pane>
